#include <iostream>
using namespace std;
int main(){
    int n1, n2;
    char op;
    cout << "Enter OP [+, -, *, / ]: "<< endl;
    cin >> op;
    cout << "n1 : ";
    cin >> n1;
    cout << "n2 : ";
    cin >> n2;

    if (op == '+') cout << "Ans : " << n1 + n2 << endl;
    else if (op == '-') cout << "Ans : " << n1 - n2 << endl;
    else if (op == '*') cout << "Ans : " << n1 * n2 << endl;
    else if (op == '/') cout << "Ans : " << n1 / n2 << endl;
    
    
}
